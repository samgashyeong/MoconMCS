<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main.SearchFood.FoodResultLoading"
        android:background="#fff">

        <ProgressBar
            android:id="@+id/prb"
            android:layout_width="84.9dp"
            android:layout_height="84.9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminateDrawable="@drawable/pgb_design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="@+id/prb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/prb" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="결과값을 기다리는 중"
            android:fontFamily="@font/noto_sans_cj_kkr"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#2b7214"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prb"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_icon"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>