<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main.SearchFood.FoodResultActivity">

        <TextView
            android:id="@+id/resultTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋음"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/resultIV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/resultIV"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/undraw_memory_storage_reh0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 상품성분 리스트보기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultIV" />

        <TextView
            android:id="@+id/notFoundProductTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성분이 검색되지않은 상품 : "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IsStrangeTV" />

        <TextView
            android:id="@+id/IsStrangeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뭔가 이상하신가요?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>