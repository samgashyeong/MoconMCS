<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoconMCS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2B7214</item>
        <item name="colorPrimaryVariant">#2B7214</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2B7214</item>
        <item name="colorSecondaryVariant">#018708</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:itemTextAppearance">@style/CustomTextMenu</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"
        >
        <item name="fontFamily">@font/noto_sans_cj_kkr_medium</item>
        <item name="android:textColor">#2B7214</item>
        <item name="android:fontStyle">normal</item>
    </style>

    <style name="MyItemFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_medium</item>
        <item name="android:textColor">#2B7214</item>
    </style>

    <style name="CustomTextMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#2B7214</item>
        <item name="android:actionMenuTextColor">#2B7214</item>
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_medium</item>
    </style>
</resources>